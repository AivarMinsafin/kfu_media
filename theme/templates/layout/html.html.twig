<body{{ attributes.addClass('news-page') }}>
{% elseif route_name in ["view.kalendar_na_den.page_day"] %}
    <body {{ attributes.addClass("calendar-page") }}
{% elseif route_name == "view.fotoalbom.page_1" %}
<body{{ attributes.addClass('photobank-page') }}>
{% elseif not root_path %}
<body{{ attributes.addClass("home") }}>
{% elseif type == "news" %}
<body{{ attributes.addClass('newsCart-page') }}>
{% else %}
<body{{ attributes.addClass('text-page') }}>
{% endif %}

