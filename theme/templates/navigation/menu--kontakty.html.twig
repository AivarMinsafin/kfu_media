{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    {% if menu_level == 0 %}
<ul{{ attributes.addClass("menu") }}>
{% else %}
    <ul class="submenu">
{% endif %}
        {% for item in items %}
            {% if item.title == "ДЕПАРТАМЕНТ PR И РЕКЛАМЫ" %}
                <li{{ item.attributes.addClass("pr") }}>
                    {{ link(item.title, item.url) }}
                    <span id="showSub"><span id="arrow"></span></span>
                    {% if item.below %}
                        {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
                    {% endif %}
                </li>
        {% else %}
            <li{{ item.attributes }}>
                {{ link(item.title, item.url) }}
                {% if item.below %}
                    {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
                {% endif %}
            </li>
        {% endif %}
        {% endfor %}
    </ul>
    {% endif %}
    {% endmacro %}
