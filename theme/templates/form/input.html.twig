{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{% if name == "created" and path != "/recomendet" %}
    {#
    <div class = "uk-flex uk-flex-middle datepicker">
        <input id="edit-created" name="created" type="text" data-uk-datepicker="{format:'DD.MM.YYYY'}" placeholder = "Выберите дату">
        <div class = "svg-wrapper"><svg role="img"><use xlink:href="#calendar"></use></svg></div>
    </div>
    #}
    <input{{ attributes }} />{{ children }}
    <div id="airdatepicker"></div>
{% elseif name=="fdp" %}
    <div class = "uk-flex uk-flex-middle datepicker">
        <input id="edit-fdp" name="fdp" type="text" data-uk-datepicker="{format:'DD.MM.YYYY'}" placeholder = "Выберите дату">
        <div class = "svg-wrapper"><svg role="img"><use xlink:href="#calendar"></use></svg></div>
    </div>
{% elseif name=="fio" %}
    <div class="searchForm-top form-row">
        <input placeholder="Что ищем?" required="" type="text">
    </div>
{% else %}
    <input{{ attributes }} />{{ children }}
{% endif %}
